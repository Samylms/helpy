<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/photo_background"
    android:orientation="vertical"
    tools:mContext=".authentication.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="bottom|center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:srcCompat="@drawable/logo_entraide" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center">

        <Button
            android:id="@+id/btnBesoin"
            android:layout_width="158dp"
            android:layout_height="109dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/button_red"
            android:text="J'ai besoin d'aide"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingHorizontal="10dp"/>

        <Button
            android:id="@+id/btnPropose"
            android:layout_width="158dp"
            android:layout_height="109dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/button_green"
            android:text="Je propose mon aide"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingHorizontal="10dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <Button
            android:id="@+id/btnGestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/btn_transparent"
            android:text="Gestion d'activitÃ©s"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingHorizontal="20dp"/>

    </LinearLayout>
</LinearLayout>